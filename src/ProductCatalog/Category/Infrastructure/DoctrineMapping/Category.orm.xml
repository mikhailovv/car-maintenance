<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity
        name="App\ProductCatalog\Category\Domain\Entity\Category"
        table="category"
        repository-class="App\ProductCatalog\Category\Infrastructure\Repository\CategoryRepository"
    >
        <id name="id" type="guid" column="id" length="36">
            <generator strategy="NONE" />
        </id>
        <field name="name" column="name" length="255" />
        <field name="createdAt" column="created_at" type="datetime_immutable" />
        <field name="updatedAt" column="updated_at" type="datetime_immutable" />
        <field name="parentCategoryId" column="parent_category_id" type="string" />
        <many-to-one field="parentCategory" target-entity="App\ProductCatalog\Category\Domain\Entity\Category" inversed-by="subCategories">
            <join-column name="parent_category_id" referenced-column-name="id" nullable="true"/>
        </many-to-one>
        <one-to-many field="subCategories" target-entity="App\ProductCatalog\Category\Domain\Entity\Category" mapped-by="parentCategory">
            <order-by>
                <order-by-field name="name" direction="ASC"></order-by-field>
            </order-by>
        </one-to-many>
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist" />
            <lifecycle-callback type="preUpdate" method="initUpdatedAt" />
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
