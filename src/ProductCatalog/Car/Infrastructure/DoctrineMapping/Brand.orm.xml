<?xml version="1.0" encoding="utf-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\ProductCatalog\Car\Domain\Entity\Brand"
            table="brands"
            repository-class="App\ProductCatalog\Car\Infrastructure\Repository\BrandRepository"
            >
        <id name="id" type="integer" column="id" length="36">
            <generator strategy="AUTO" />
        </id>
        <field name="name" column="name" length="255" />
        <field name="slug" column="slug" length="255" />
    </entity>
</doctrine-mapping>